<section id="nosproduits">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>Nos véhicules en ventes</h2>
            </div>
        </div>
        <div id="voitures" class="product row pb-3 justify-content-center">
            {{!-- Utilisation du helper pour une limite de 3 --}}
            {{#each (limit voiture 3)}}
            <div class="col-12 col-md-6 col-lg-4">
                <div class="product-item txt-color-black">
                    <a href="/blog/{{this.id}}">
                        <img src="{{this.img_url}}">
                    </a>
                    <h3>{{ this.make }} {{ this.model }}</h3>
                    <p>Prix: {{ this.price }}€</p>
                    {{!-- <p>{{ this.id }}</p> --}}
                </div>
            </div>
            {{/each}}
        </div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>
                        <a href="blog">
                            <i class="fas fa-angle-double-right"></i> Voir plus <i class="fas fa-angle-double-left"></i>
                        </a>
                    </h2>
                </div>
            </div>
        </div>
    </div>