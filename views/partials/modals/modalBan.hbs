{{!--
Partial: Modal de ban sur le page admin
--}}
<div class="modal fade" id="modalBan{{ this.id_user }}" tabindex="-1" aria-labelledby="modalBan" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                {{#if this.is_ban}}
                <h5 class="modal-title" id="modalBan">Débannir cet utilisateur</h5>
                {{else }}
                <h5 class="modal-title" id="modalBan">Bannir cet utilisateur</h5>
                {{/if}}
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{#if this.is_ban}}
                <p>Êtes vous sûr de vouloir débannir <strong>{{ this.pseudo }}</strong> ? </p>
                {{else }}
                <p>Êtes vous sûr de vouloir bannir <strong>{{ this.pseudo }}</strong> ? </p>
                {{/if}}
            </div>
            {{#if this.is_ban}}
            <form action="/admin/deban/user/{{ this.id_user }}" method="post">
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Débannir</button>
                </div>
            </form>
            {{else }}
            <form action="/admin/ban/user/{{ this.id_user }}" method="post">
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger">Bannir</button>
                </div>
            </form>
            {{/if}}
        </div>
    </div>
</div>