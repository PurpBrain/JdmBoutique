{{!--
    Partial: Modal pour modifier un article
--}}
<div class="modal fade" id="editBlog{{ this.id_Article }}" tabindex="-1" aria-labelledby="ModalEditBlog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="{{data}}/edit/voiture/{{ this.id_Article }}?_method=PUT" method="post" enctype="multipart/form-data">
            <div class="modal-header">
                <h5 class="modal-title" id="editBlog">Modification d'article</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            
            <div class="modal-body">
                
                <!--Name & Description-->
                <div class="row">
                    <div class="col-md-6">
                        <div class="contact-form">
                            <label>Marque de la voiture :</label>
                            <input minlength="2" maxlength="45" name="make" type="text" id="name" value="{{ this.make }}" required/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="contact-form">
                            <label>Model de la voiture :</label>
                            <input minlength="2" maxlength="45" name="model" type="text" value="{{ this.model }}" required/>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="contact-form">
                            <label>Prix de la voiture :</label>
                            <input minlength="2" maxlength="45" name="price" type="number" value="{{ this.price }}" required/>
                        </div>
                    </div>
                </div>
                <!--Image-->
                <div class="row">
                    <div class="col-md-6">
                        <input multiple name="img" type="file" required></input>
                    </div>
                </div>
                <div class="col-md-12">
                        <div class="contact-form">
                            <label>Description :</label>
                            <input minlength="10" maxlength="500" name="description" type="text" id="description" value="{{ this.description }}" required/>
                        </div>
                    </div>
            </div>

            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
            </form>
        </div>
    </div>
</div>