<div class="modal fade" id="login" tabindex="-1" aria-labelledby="login" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="login">Connectez-vous</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <section>
                    <div class="row">
                        <form>
                            <!--Email & Name-->
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <label>Email :</label>
                                        <input class="form-control" type="text" id="email-login"
                                            placeholder="Ajouter votre email" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="contact-form">
                                        <label>Mot de passe :</label>
                                        <input class="form-control" type="password" id="password-login"
                                            placeholder="Ajouter un mot de passe" />
                                    </div>
                                </div>
                            </div>
                        </form>
                        <div class="form-check d-flex justify-content-center">
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                            <label class="form-check-label ps-2 pb-2" for="flexCheckDefault">
                                Se souvenir du mot de passe
                            </label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-around">
                        <button class="btn btn-secondary" data-bs-target="#forgotpassword" data-bs-toggle="modal">Mot de
                            passe oubli√©</button>
                        <button class="btn btn-secondary" data-bs-target="#register" data-bs-toggle="modal">Pas
                            de compte ?</button>
                    </div>
                </section>
            </div>
            <div class="modal-footer">
                <button id='connexion-modal-login' type="button" class="btn btn-primary">Se connecter</button>
            </div>
        </div>
    </div>
</div>