{{!--
Partial: Commentaires
--}}
<section class="clients">
    <div class="pt-4 pb-3 container">
        <div class="d-flex justify-content-center">
            <button class="btn btn-secondary" type="button"
                data-bs-toggle="collapse" data-bs-target="#collapseCom" aria-expanded="false"
                aria-controls="collapseCom">
                Montrer les commentaires
            </button>
        </div>
        <div class="pt-3 pb-3 collapse" id="collapseCom">
            <div class="card card-body">
                {{#if commentaire}}
                <form class="row" action="/send/com/{{ voiture.id_Article }}" method="post">
                    <div class="col-md-12 d-flex justify-content-end">
                        <input name="com" class="border-top-0 border-end-0 border-start-0 border-secondary"
                            placeholder="Ajouter un commentaire" maxlength="144" required>
                        <button type="submit" class="ms-2 btn btn-outline-secondary">Envoyer</button>
                    </div>
                </form>
                {{#each commentaire}}
                <div class="pt-3 pb-2 border-bottom border-2">
                    <div class="row client-profil">
                        <div class="col-md-1">
                            <img src="/assets/img/img-user/{{ this.avatar_url }}">
                        </div>
                        <div class="col-md-11">
                            <p class="text-break"><strong>{{ this.pseudo }}</strong><br>{{ this.content }}</p>
                        </div>
                    </div>
                </div>
                {{/each}}
                {{else }}
                <form class="row" action="/send/com/{{ voiture.id_Article }}" method="post">
                    <div class="col-md-12 d-flex justify-content-center my-4">
                        <input name="com" class="border-top-0 border-end-0 border-start-0 border-secondary"
                            placeholder="Ajouter un commentaire" maxlength="144" required>
                        <button type="submit" class="ms-2 btn btn-outline-secondary">Envoyer</button>
                    </div>
                </form>
                <div class="pt-3 pb-3 d-flex justify-content-center border-bottom border-2">
                    <p>Auncun commentaires publié sur cette annonce :(<br>Soyez le premier à commenter !</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</section>